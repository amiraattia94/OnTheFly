<Window x:Class="OnTheFlyWPFC.View.CustodyViewEditMiniWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnTheFlyWPFC.View"
        mc:Ignorable="d"
        Title="CustodyViewEditMiniWindow" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="Transparent" WindowStyle="None" 
        AllowsTransparency="True" WindowStartupLocation="CenterScreen"
        Height="600" Width="350" ResizeMode="NoResize" >

    <UniformGrid FlowDirection="RightToLeft">
        <Border BorderThickness="0" Background="White" CornerRadius="8" Height="550" Width="300" >
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="1" Color="#FFACACAC"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="65"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Height="65" VerticalAlignment="Top" Grid.Row="0" Grid.ColumnSpan="3">
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="1" ShadowDepth="1" Color="#FFACACAC"/>
                    </Grid.Effect>

                    <UniformGrid FlowDirection="LeftToRight">
                        <StackPanel Orientation="Horizontal">
                            <Button Name="btnCloseForm"  Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Right" Height="65" FontWeight="Light" BorderBrush="{x:Null}" Click="BtnCloseForm_Click">
                                <UniformGrid FlowDirection="RightToLeft">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Foreground="#8C9AB6"/>
                                    </StackPanel>
                                </UniformGrid>
                            </Button>
                        </StackPanel>
                    </UniformGrid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>


                   
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="65"/>
                                <RowDefinition Height="200*"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                               <ColumnDefinition Width="150*"/>
                               <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                        <Label Content="تعديل عهدة" FontFamily="Noto Kufi Arabic" FontSize="18" Foreground="DarkSlateGray"  VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Height="44" Margin="0"/>

                            <StackPanel Name="stkCustody" Loaded="StkCustody_Loaded" Grid.Row="1" Grid.Column="1" >
                                <Border Height="40" Margin="0,0,0,15">
                                <TextBlock Name="txtcustodyID" Text="" VerticalAlignment="Stretch"  FontSize="16" Foreground="DarkSlateGray"/>
                                </Border>
                                <Border Height="40" Margin="0,0,0,15">
                                <TextBlock Name="txtowner" VerticalAlignment="Stretch"  FontSize="16" Foreground="DarkSlateGray"/>
                                </Border>
                                <Border Height="40" Margin="0,0,0,15">
                                <TextBlock Name="txtgiver" VerticalAlignment="Stretch"  FontSize="16" Foreground="DarkSlateGray"/>
                                </Border>

                                <Border Height="40" Margin="0,0,0,15">
                                <TextBlock Name="txtinvoice" VerticalAlignment="Stretch"  FontSize="16" Foreground="DarkSlateGray"/>
                                </Border>
                                <Border Height="40" Margin="0,0,0,15">
                                <TextBlock Name="txtammount" VerticalAlignment="Stretch"  FontSize="16" Foreground="DarkSlateGray"/>
                                </Border>
                                
                                <Border Height="40" Margin="0,0,0,15">
                                <ComboBox Name="cmbstate" VerticalAlignment="Stretch"  FontSize="16" Foreground="DarkSlateGray">
                                    <ComboBoxItem Content="مفتوحة">

                                    </ComboBoxItem>
                                    <ComboBoxItem Content="مقفلة">

                                    </ComboBoxItem>
                                </ComboBox>
                                </Border>


                                <Border Height="40" Margin="55,20,55,0">
                                    <Border Height="40" BorderBrush="Transparent" CornerRadius="20"  Grid.Column="2" Background="#2C99F5" Margin="0,0,0,0" >
                                    <Button Click="editcustody" Background="Transparent" BorderThickness="0" Height="40" VerticalAlignment="Center"  FontWeight="Light" BorderBrush="{x:Null}">
                                            <UniformGrid FlowDirection="RightToLeft">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="15" Foreground="White" FontFamily="Noto Kufi Arabic" Text="تعديل عهدة" Margin="0,0,0,0"  />
                                                    
                                                </StackPanel>
                                            </UniformGrid>
                                        </Button>
                                    </Border>
                                </Border>

                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="3" >
                                <Border Height="40" Margin="0,0,0,15">

                                </Border>
                                <Border Height="40" Margin="0,0,0,15">

                                </Border>
                                <Border Height="40" Margin="0,0,0,15">

                                </Border>
                                <Border Height="40" Margin="0,0,0,15"/>

                            </StackPanel>

                        </Grid>


          



                </Grid>



            </Grid>


        </Border>
    </UniformGrid>
</Window>
